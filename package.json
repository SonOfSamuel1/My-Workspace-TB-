{
  "name": "my-workspace-monorepo",
  "version": "1.0.0",
  "description": "Personal development monorepo for applications, MCP servers, and utilities",
  "private": true,
  "workspaces": [
    "servers/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:servers": "npm run build --workspace=servers/todoist-mcp-server --workspace=servers/ynab-mcp-server --workspace=servers/gmail-mcp-server",
    "test": "npm run test --workspaces --if-present",
    "test:servers": "npm run test --workspace=servers/todoist-mcp-server --workspace=servers/ynab-mcp-server --workspace=servers/gmail-mcp-server",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf **/node_modules **/dist",
    "clean:dist": "rm -rf servers/*/dist",
    "clean:modules": "rm -rf **/node_modules",
    "lint:ts": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
    "prepare": "husky install || true"
  },
  "keywords": [
    "monorepo",
    "mcp",
    "automation",
    "productivity"
  ],
  "author": "Terrance Brandon",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SonOfSamuel1/My-Workspace-TB-.git"
  }
}
