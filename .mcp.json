{
  "mcpServers": {
    "todoist": {
      "command": "node",
      "args": [
        "${workspaceFolder}/servers/todoist-mcp-server/dist/index.js"
      ],
      "env": {
        "TODOIST_API_TOKEN": "${env:TODOIST_API_TOKEN}"
      }
    },
    "ynab": {
      "command": "node",
      "args": [
        "${workspaceFolder}/servers/ynab-mcp-server/dist/index.js"
      ],
      "env": {
        "YNAB_API_KEY": "${env:YNAB_API_KEY}"
      }
    },
    "gmail": {
      "command": "node",
      "args": [
        "${workspaceFolder}/servers/gmail-mcp-server/dist/index.js"
      ],
      "env": {
        "GMAIL_CREDENTIALS_PATH": "${env:GMAIL_CREDENTIALS_PATH}",
        "GMAIL_TOKEN_PATH": "${env:GMAIL_TOKEN_PATH}"
      }
    }
  }
}