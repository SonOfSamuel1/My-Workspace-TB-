{
  "mcpServers": {
    "comet": {
      "command": "node",
      "args": ["dist/index.js"],
      "cwd": "./servers/comet-mcp-server",
      "env": {
        "RESPONSE_TIMEOUT": "30000",
        "STABILIZATION_TIME": "1000",
        "MAX_RETRIES": "3",
        "USE_CLIPBOARD_FALLBACK": "true"
      }
    }
  }
}
