# Email Assistant Lambda Configuration
# Copy this file to .env and fill in your values

# Claude Code OAuth Token
# Get this from: claude setup-token
CLAUDE_CODE_OAUTH_TOKEN=sk-ant-oat01-...

# Gmail MCP Credentials (base64-encoded)
# Encode with: cat ~/.gmail-mcp/gcp-oauth.keys.json | base64 | tr -d '\n'
GMAIL_OAUTH_CREDENTIALS=

# Encode with: cat ~/.gmail-mcp/credentials.json | base64 | tr -d '\n'
GMAIL_CREDENTIALS=

# Escalation phone number (for Tier 1 urgent emails)
ESCALATION_PHONE=+14077448449

# Twilio credentials (optional - for SMS escalation)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Test mode (set to 'true' to prevent actual email sends)
TEST_MODE=false

# AWS Configuration
AWS_REGION=us-east-1
