# Amazon-YNAB Reconciliation Environment Variables
# Copy this file to .env and fill in your actual values

# Amazon Credentials
AMAZON_EMAIL=your_amazon_email@example.com
AMAZON_PASSWORD=your_amazon_password

# Optional: If using 2FA
AMAZON_OTP_SECRET=your_2fa_secret_key

# YNAB Configuration
YNAB_API_KEY=your_ynab_personal_access_token
YNAB_BUDGET_ID=optional_specific_budget_id

# Email Configuration (for reports)
GMAIL_CREDENTIALS_PATH=../credentials/gmail_credentials.json
GMAIL_TOKEN_PATH=../credentials/gmail_token.pickle
EMAIL_RECIPIENT=your_email@example.com

# Application Settings
DRY_RUN=false
DEBUG_MODE=false
HEADLESS_BROWSER=true

# Data Source Settings (set one to true)
# Priority: DUAL_EMAIL > DOWNLOADS > EMAIL > CSV > BROWSERBASE > SAMPLE
USE_DUAL_EMAIL=true  # Use dual-email reconciliation (Gmail + IMAP) - PRIMARY
USE_DOWNLOADS=false  # Check downloads folder for Amazon CSV files
USE_EMAIL=false      # Parse Amazon emails from Gmail (legacy single account)
USE_CSV=false        # Use CSV file from data/ directory
USE_SAMPLE=false     # Use sample data for testing

# =============================================================================
# DUAL EMAIL CONFIGURATION (for multi-account email reconciliation)
# =============================================================================

# Primary Gmail account (uses OAuth2 - credentials configured in config.yaml)
GMAIL_CREDENTIALS_PATH=credentials/gmail_credentials.json
GMAIL_TOKEN_PATH=credentials/gmail_token.pickle

# Secondary IMAP account (brittanybrandon@mail.com)
IMAP_EMAIL_BRITTANY=brittanybrandon@mail.com
IMAP_PASSWORD_BRITTANY=your_mail_com_app_password
IMAP_SERVER_BRITTANY=imap.mail.com
IMAP_PORT_BRITTANY=993

# Downloads Folder Settings
DOWNLOAD_MONITOR_DIR=~/Downloads
DOWNLOAD_ARCHIVE_DIR=./data/processed

# AWS Configuration (for Lambda deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_aws_account_id

# Optional: Override configuration file path
CONFIG_PATH=../config.yaml

# Optional: Override lookback period (days)
LOOKBACK_DAYS=30