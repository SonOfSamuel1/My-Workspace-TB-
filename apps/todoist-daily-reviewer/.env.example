# Daily Todoist Reviewer - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Todoist Configuration
# ===========================================
# Get your API token from: https://todoist.com/prefs/integrations
TODOIST_API_TOKEN=your_todoist_api_token_here

# Email address to receive the daily review
TODOIST_REVIEW_EMAIL=your_email@example.com

# ===========================================
# REQUIRED: Gmail API Configuration
# ===========================================
# For local development, use file paths:
GOOGLE_CREDENTIALS_FILE=../../shared/credentials/credentials.json
GOOGLE_TOKEN_FILE=../../shared/credentials/token.pickle

# For Lambda deployment, use base64 encoded values:
# GMAIL_OAUTH_CREDENTIALS=base64_encoded_oauth_credentials
# GMAIL_CREDENTIALS=base64_encoded_user_token

# ===========================================
# OPTIONAL: Customization
# ===========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Timezone for scheduling (default: America/New_York)
TZ=America/New_York

# ===========================================
# AWS Configuration (for deployment)
# ===========================================
# AWS_REGION=us-east-1
# AWS_PROFILE=default
# USE_SES=true
# SES_SENDER_EMAIL=your_verified_ses_email@example.com

# ===========================================
# Local Execution Configuration
# ===========================================
# Use Claude CLI for AI analysis (default: true)
# Set to false to use pattern matching instead
USE_CLAUDE_CLI=true

# Claude CLI timeout in milliseconds (default: 120000 = 2 minutes)
CLAUDE_TIMEOUT=120000

# Enable email reply polling (default: true)
ENABLE_REPLY_POLLING=true

# Poll interval in milliseconds (default: 300000 = 5 minutes)
POLL_INTERVAL_MS=300000

# User email for sending guidance emails
USER_EMAIL=your_email@example.com
