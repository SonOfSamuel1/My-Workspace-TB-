# Sleep Eight Daily Reporter Environment Variables
# ================================================
# Copy this file to .env and fill in your values

# Eight Sleep Credentials
# -----------------------
# Your Eight Sleep account email
EIGHT_SLEEP_EMAIL=your_email@example.com

# Your Eight Sleep account password
EIGHT_SLEEP_PASSWORD=your_password_here

# Email Configuration
# -------------------
# Email address to receive daily sleep reports
SLEEP_REPORT_EMAIL=your_email@example.com

# AWS SES sender email (must be verified in SES)
SES_SENDER_EMAIL=brandonhome.appdev@gmail.com

# AWS Configuration
# -----------------
# AWS region for SES and Parameter Store
AWS_REGION=us-east-1
