# Toggl Track API Configuration
TOGGL_API_TOKEN=your_toggl_api_token_here
TOGGL_WORKSPACE_ID=your_workspace_id_here

# Google Gmail API Configuration
GOOGLE_CREDENTIALS_FILE=credentials/credentials.json
GOOGLE_TOKEN_FILE=credentials/token.pickle

# Report Configuration
REPORT_RECIPIENT_EMAIL=your_email@example.com
DAILY_GOAL_HOURS=8.0

# Timezone
TIMEZONE=America/New_York

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/daily_report.log

# AWS Parameter Store (for Lambda deployment)
# Leave empty for local development
AWS_PARAMETER_STORE_PREFIX=/toggl-daily-report/
