# Daily AI News Report - Environment Variables
# Copy this file to .env and fill in the values

# ===================
# AWS Configuration
# ===================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===================
# Email Configuration
# ===================
# Sender email (must be verified in AWS SES)
SENDER_EMAIL=your-verified-email@example.com

# Recipient email(s) - comma separated for multiple
RECIPIENT_EMAIL=recipient@example.com

# ===================
# Optional API Keys
# ===================
# If using news APIs in addition to RSS
NEWS_API_KEY=

# ===================
# Environment
# ===================
# development, staging, or production
ENVIRONMENT=development

# ===================
# Lambda Configuration
# ===================
# Set to true when running in AWS Lambda
IS_LAMBDA=false
