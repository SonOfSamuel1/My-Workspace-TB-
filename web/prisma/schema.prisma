// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  agents        Agent[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Agent {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  name            String
  agentEmail      String    @unique
  description     String?

  // Configuration stored as JSON
  config          Json      // Tier rules, style, schedule, off-limits contacts

  // Gmail Integration
  gmailConnected  Boolean   @default(false)
  gmailEmail      String?

  // Agent Status
  enabled         Boolean   @default(true)
  lastRunAt       DateTime?

  // Metadata
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  emails          Email[]
  actions         AgentAction[]

  @@index([userId])
}

model Email {
  id              String    @id @default(cuid())
  agentId         String
  agent           Agent     @relation(fields: [agentId], references: [id], onDelete: Cascade)

  // Gmail Data
  gmailId         String
  gmailThreadId   String?
  subject         String
  from            String
  to              String?
  snippet         String?   @db.Text
  body            String?   @db.Text

  // Classification
  tier            Int       // 1-4
  reasoning       String    @db.Text // Claude's classification reasoning
  confidence      Float?    // 0.0-1.0

  // Status
  status          String    // processed, pending_approval, escalated, flagged
  processed       Boolean   @default(false)

  // Timestamps
  receivedAt      DateTime
  processedAt     DateTime?
  createdAt       DateTime  @default(now())

  actions         AgentAction[]

  @@index([agentId])
  @@index([tier])
  @@index([status])
  @@index([receivedAt])
}

model AgentAction {
  id              String    @id @default(cuid())
  agentId         String
  agent           Agent     @relation(fields: [agentId], references: [id], onDelete: Cascade)

  emailId         String?
  email           Email?    @relation(fields: [emailId], references: [id], onDelete: SetNull)

  // Action Details
  type            String    // response_sent, draft_created, sms_sent, tool_executed, label_applied
  data            Json      // Action-specific data (response text, tool params, etc.)

  // Approval Workflow
  requiresApproval Boolean  @default(false)
  approved        Boolean?
  approvedAt      DateTime?
  approvedBy      String?   // User ID who approved

  // Tool Execution (for Email Agent)
  toolName        String?   // playwright, calendar, data
  toolInput       Json?
  toolOutput      Json?

  // Status
  status          String    @default("pending") // pending, executing, completed, failed
  error           String?   @db.Text

  // Metadata
  createdAt       DateTime  @default(now())
  completedAt     DateTime?

  @@index([agentId])
  @@index([emailId])
  @@index([type])
  @@index([status])
  @@index([requiresApproval])
}

model Analytics {
  id              String    @id @default(cuid())
  agentId         String
  date            DateTime  @db.Date

  // Metrics
  emailsProcessed Int       @default(0)
  tier1Count      Int       @default(0)
  tier2Count      Int       @default(0)
  tier3Count      Int       @default(0)
  tier4Count      Int       @default(0)

  responsesSent   Int       @default(0)
  draftsCreated   Int       @default(0)
  escalations     Int       @default(0)

  avgResponseTime Float?    // in minutes

  // Costs
  claudeTokens    Int       @default(0)
  openrouterTokens Int      @default(0)
  estimatedCost   Float     @default(0)

  createdAt       DateTime  @default(now())

  @@unique([agentId, date])
  @@index([agentId])
  @@index([date])
}
